name:                cis194-fall16
version:             0.1.0.0
homepage:            https://github.com/bitemyapp/cis194-fall16
license:             BSD3
license-file:        LICENSE
author:              Chris Allen
maintainer:          cma@bitemyapp.com
copyright:           2017 Daniel Holmes
category:            Web
build-type:          Simple
cabal-version:       >=1.10


library
  hs-source-dirs:      src
  exposed-modules:     Fall16
  build-depends:       base >= 4.7 && < 5
                     , codeworld-api == 0.2.0.0
  default-language:    Haskell2010

executable fall16-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , cis194-fall16
  default-language:    Haskell2010

test-suite fall16-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , cis194-fall16
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/bitemyapp/cis194-fall16
